      ],
      "messages": {
        "201200000": {
          "id": 201200000,
          "type": "Text",
          "sender": "NPC",
          "senderContactId": 1305,
          "text": "Gần đây, Đại Học Chân Lý Số Một lại bắt đầu tuyển sinh rồi, có ý định tham gia đào tạo chuyên sâu không?",
          "next": [
            201200001
          ]
        },
        "201200001": {
          "id": 201200001,
          "type": "Text",
          "sender": "Player",
          "senderContactId": 8001,
          "text": "Hả? Đột ngột thế",
          "next": [
            201200002
          ]
        },
        "201200002": {
          "id": 201200002,
          "type": "Text",
          "sender": "NPC",
          "senderContactId": 1305,
          "text": "Du lịch trong vũ trụ cũng cần tri thức phong phú, nếu không sẽ không thể vượt qua nguy hiểm.",
          "next": [
            201200003
          ]
        },
        "201200003": {
          "id": 201200003,
          "type": "Text",
          "sender": "NPC",
          "senderContactId": 1305,
          "text": "{F#Cô}{M#Anh} thích gì? Toán học, vật lý, triết học...?",
          "next": [
            201200004,
            201200013,
            201200018
          ]
        },
        "201200004": {
          "id": 201200004,
          "type": "Text",
          "sender": "Player",
          "senderContactId": 8001,
          "text": "Tôi thích toán học",
          "next": [
            201200005
          ]
        },
        "201200005": {
          "id": 201200005,
          "type": "Text",
          "sender": "NPC",
          "senderContactId": 1305,
          "text": "Tôi nhớ đến một câu chuyện.",
          "next": [
            201200006
          ]
        },
        "201200006": {
          "id": 201200006,
          "type": "Text",
          "sender": "NPC",
          "senderContactId": 1305,
          "text": "Lúc trước, nhà vật lý học và kỹ sư ở trên khinh khí cầu bị mất phương hướng trong khe núi.",
          "next": [
            201200007
          ]
        },
        "201200007": {
          "id": 201200007,
          "type": "Text",
          "sender": "NPC",
          "senderContactId": 1305,
          "text": "Bọn họ kêu to: \"Này... Chúng tôi đang ở đâu?\".",
          "next": [
            201200008
          ]
        },
        "201200008": {
          "id": 201200008,
          "type": "Text",
          "sender": "NPC",
          "senderContactId": 1305,
          "text": "15 phút sau, bọn họ nghe thấy có người trả lời: \"Này... Các bạn đang ở trong khinh khí cầu!\"",
          "next": [
            201200009
          ]
        },
        "201200009": {
          "id": 201200009,
          "type": "Text",
          "sender": "NPC",
          "senderContactId": 1305,
          "text": "Nhà vật lý học nói, người đó chắc chắn là nhà toán học.",
          "next": [
            201200010
          ]
        },
        "201200010": {
          "id": 201200010,
          "type": "Text",
          "sender": "NPC",
          "senderContactId": 1305,
          "text": "\"Bởi vì anh ấy dùng một khoảng thời gian rất dài, đưa ra một đáp án hoàn toàn chính xác, nhưng không được tích sự gì cả.\"",
          "next": [
            201200011
          ]
        },
        "201200011": {
          "id": 201200011,
          "type": "Text",
          "sender": "NPC",
          "senderContactId": 1305,
          "text": "Nói thật, đây là một ngành học khó nhằn. Đối với rất nhiều người mà nói, cả đời cũng không thể nào thấu hiểu được ý nghĩa của toán học.",
          "next": [
            201200012
          ]
        },
        "201200012": {
          "id": 201200012,
          "type": "Text",
          "sender": "Player",
          "senderContactId": 8001,
          "text": "Một câu chuyện thật cảm lạnh",
          "next": [
            201200025
          ]
        },
        "201200013": {
          "id": 201200013,
          "type": "Text",
          "sender": "Player",
          "senderContactId": 8001,
          "text": "Tôi thích vật lý.",
          "next": [
            201200014
          ]
        },
        "201200014": {
          "id": 201200014,
          "type": "Text",
          "sender": "NPC",
          "senderContactId": 1305,
          "text": "Hiện tại, tốc độ phát biểu của tập san Vật Lý Học đã vượt qua tốc độ ánh sáng.",
          "next": [
            201200015
          ]
        },
        "201200015": {
          "id": 201200015,
          "type": "Text",
          "sender": "NPC",
          "senderContactId": 1305,
          "text": "Nhưng không trái với thuyết tương đối, bởi vì chúng không truyền tải bất cứ thông tin gì.",
          "next": [
            201200016
          ]
        },
        "201200016": {
          "id": 201200016,
          "type": "Text",
          "sender": "NPC",
          "senderContactId": 1305,
          "text": "Mặt khác, nếu bạn làm nghiên cứu, rất có thể trong một năm ít nhất phải có bốn phần năm thời gian là tiến triển chậm chạp, một phần năm thời gian còn lại là không có chút tiến triển nào.",
          "next": [
            201200017
          ]
        },
        "201200017": {
          "id": 201200017,
          "type": "Text",
          "sender": "Player",
          "senderContactId": 8001,
          "text": "Có vẻ đáng sợ",
          "next": [
            201200025
          ]
        },
        "201200018": {
          "id": 201200018,
          "type": "Text",
          "sender": "Player",
          "senderContactId": 8001,
          "text": "Tôi thích triết học",
          "next": [
            201200019
          ]
        },
        "201200019": {
          "id": 201200019,
          "type": "Text",
          "sender": "NPC",
          "senderContactId": 1305,
          "text": "{F#Cô}{M#Anh} biết điểm khác nhau giữa triết học và khoa học là ở đâu không?",
          "next": [
            201200020
          ]
        },
        "201200020": {
          "id": 201200020,
          "type": "Text",
          "sender": "NPC",
          "senderContactId": 1305,
          "text": "Để giải quyết vấn đề khoa học, {F#cô}{M#anh} cần giấy, bút và cục tẩy.",
          "next": [
            201200021
          ]
        },
        "201200021": {
          "id": 201200021,
          "type": "Text",
          "sender": "NPC",
          "senderContactId": 1305,
          "text": "Để giải quyết vấn đề triết học, {F#cô}{M#anh} chỉ cần giấy và bút.",
          "next": [
            201200022
          ]
        },
        "201200022": {
          "id": 201200022,
          "type": "Text",
          "sender": "NPC",
          "senderContactId": 1305,
          "text": "Triết học thiếu tiêu chuẩn đúng sai rõ ràng.",
          "next": [
            201200023
          ]
        },
        "201200023": {
          "id": 201200023,
          "type": "Text",
          "sender": "NPC",
          "senderContactId": 1305,
          "text": "Tôi không đề nghị học giả sơ cấp nghiên cứu ngành học này.",
          "next": [
            201200024
          ]
        },
        "201200024": {
          "id": 201200024,
          "type": "Text",
          "sender": "Player",
          "senderContactId": 8001,
          "text": "Đã hiểu",
          "next": [
            201200025
          ]
        },
        "201200025": {
          "id": 201200025,
          "type": "Text",
          "sender": "NPC",
          "senderContactId": 1305,
          "text": "Xem ra {F#cô}{M#anh} cần thời gian để cân nhắc.",
          "next": [
            201200026
          ]
        },
        "201200026": {
          "id": 201200026,
          "type": "Text",
          "sender": "NPC",
          "senderContactId": 1305,
          "text": "{F#Cô}{M#Anh} cần cảnh giác với những kẻ chỉ nói những ưu thế của chuyên ngành, mà không thẳng thắn với {F#cô}{M#anh} về sự khó khăn của ngành học đó.",
          "next": [
            201200027
          ]
        },
        "201200027": {
          "id": 201200027,
          "type": "Text",
          "sender": "NPC",
          "senderContactId": 1305,
          "text": "Tôi đã gặp rất nhiều học sinh tràn đầy hứng thú, cuối cùng lại rời đi trong thất vọng và vỡ mộng.",
          "next": [
            201200028
          ]
        },
        "201200028": {
          "id": 201200028,
          "type": "Text",
          "sender": "NPC",
          "senderContactId": 1305,
          "text": "Bởi vậy, bất kỳ sự lựa chọn trong việc học nào, đều phải cẩn thận.",
          "next": [
            201200029
          ]
        },
        "201200029": {
          "id": 201200029,
          "type": "Text",
          "sender": "NPC",
          "senderContactId": 1305,
          "text": "Nói hơi khó nghe một chút thì không phải tất cả mọi người đều thích hợp làm học thuật.",
          "next": [
            201200030,
            201200031
          ]
        },
        "201200030": {
          "id": 201200030,
          "type": "Text",
          "sender": "Player",
          "senderContactId": 8001,
          "text": "Tôi suy nghĩ kĩ đã",
          "next": [
            201200032
          ]
        },
        "201200031": {
          "id": 201200031,
          "type": "Text",
          "sender": "Player",
          "senderContactId": 8001,
          "text": "Anh cũng biết là khó nghe à",
          "next": [
            201200032
          ]
        },
        "201200032": {
          "id": 201200032,
          "type": "Text",
          "sender": "NPC",
          "senderContactId": 1305,
          "text": "Ừ. Suy nghĩ cẩn thận rồi hãy trả lời tôi, nếu cần, tôi có thể viết thư giới thiệu cho {F#cô}{M#anh}.",
          "next": []
        }
      },
